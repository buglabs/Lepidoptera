!!! 5
html
  head
    title BUGswarm | Fuel Efficiency Challenge

    // expose the config variable globally
    script
      var config = !{JSON.stringify(config)}

    link(href="/stylesheets/screen.css", type="text/css", rel="stylesheet")
    link(href="http://fonts.googleapis.com/css?family=Cabin:500|PT+Sans:700", type="text/css", rel="stylesheet")

    script(src="http://cdn.buglabs.net/swarm/swarm-v1.0.0.beta.js")
    script(src="http://maps.google.com/maps/api/js?sensor=false", type="text/javascript" )
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js", type="text/javascript" )
    script(src="/scripts/coffee-script.js", type="text/javascript")
    script(src="/scripts/lepidoptera.coffee", type="text/coffeescript" )

  body
    #top_border
    #container
      #header
        img#logo(src="images/logo.png", alt="logo")
        ul#menu
          for link, i in ["HOW IT WORKS", "DOCUMENTATION", "BLOG", "SUPPORT"]
            li
              a(href="#") #{link}
              img.divider(src="images/divider.png", alt="|")
      #content
        h1#title Fuel Efficiency Challenge!
        #map_canvas
        #sidebar
          #filter
            span#filter_tag Sort by
            select#filter_combo
              option(value="most_recent") Most Recently Updated
              option(value="mpg") MPG
              option(value="rpm") RPM
              option(value="rank") Rank
              option(value="change") Change
          ul#resources
      #footer
        #copyright
          p &copy; Bug Labs, Inc. | 2011
